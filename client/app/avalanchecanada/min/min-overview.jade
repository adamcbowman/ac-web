      .min-landing--side-column
        .min-submit-wrapper
          a.min-submit-button(href="/submit")
            span.min-create-icon
              i.fa.fa-tasks.fa-inverse.fa-2x
                i.fa.fa-plus.fa-2x
              span Create Report

          p.min-guidelines
            a(href="http://www.avalanche.ca/fxresources/Submissions+Guidelines.pdf") Submission Guidelines

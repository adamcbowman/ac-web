

.PHONEY: init build test


init:
	@echo "Init CI Build..."
	. ~/.nvm/nvm.sh && nvm install 4.4.3 && nvm use 4.4.3
	npm install npm -g
	npm config set registry http://registry.npmjs.org/
	npm cache clean
	npm install
	npm install -g grunt-cli bower@1.7.2 karma
	gem install sass
	bower install

build:
	@echo "Building..."
	grunt

test:
	@echo "Testing..."
	@echo "Not really"


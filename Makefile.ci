

.PHONEY: init build test

init:
	@echo "Init CI Build..."
	. ~/.nvm/nvm.sh && nvm install 4.4.3 && nvm use 4.4.3
	npm install npm@3.10.7 -g
	npm config set registry http://registry.npmjs.org/
	npm cache clean
	npm install

build:
	@echo "Building..."
	make build

test:
	@echo "Testing..."
	$(MAKE) -f Makefile test
